{
  "name": "django_tailwind",
  "description": "",
  "scripts": {
    "build-postcss": "postcss --config . --map false --output ../static/css/styles.min.css ./src/styles.scss",
    "build-cleancss": "cleancss -o ../static/css/styles.min.css ../static/css/styles.min.css",
    "build-clean": "rimraf ../static/css",
    "build:css": "npm run build-clean && cross-env NODE_ENV=production npm run build-postcss && npm run build-cleancss",
    "build:js": "cross-env NODE_ENV=production webpack",
    "watch:js": "cross-env NODE_ENV=development webpack --watch",
    "build:all": "npm run build:css && npm run build:js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.7.3",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.2",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss-cli": "^6.1.3",
    "postcss-scss": "^2.0.0",
    "rimraf": "^3.0.0",
    "style-loader": "^1.1.3",
    "svelte": "^3.18.0",
    "svelte-loader": "^2.13.6",
    "tailwindcss": "^1.1.4",
    "watch": "^1.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}

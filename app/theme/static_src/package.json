{
  "name": "django_tailwind",
  "description": "",
  "scripts": {
    "build": "npm run build-clean && cross-env NODE_ENV=production npm run build-postcss && npm run build-cleancss",
    "build-postcss": "postcss --config . --map false --output ../static/css/styles.min.css ./src/styles.scss",
    "build-cleancss": "cleancss -o ../static/css/styles.min.css ../static/css/styles.min.css",
    "build-clean": "rimraf ../static/css",
    "build:js": "webpack",
    "watch:js": "webpack --watch",
    "start": "watch 'npm run build-postcss' ./src"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.7.3",
    "clean-css-cli": "^4.3.0",
    "cross-env": "^6.0.3",
    "node-sass": "^4.13.1",
    "postcss-cli": "^6.1.3",
    "postcss-scss": "^2.0.0",
    "rimraf": "^3.0.0",
    "tailwindcss": "^1.1.4",
    "watch": "^1.0.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
